<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.assignment.AssignmentFragment"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/textView21"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@color/blue"
        android:gravity="center|start"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Batch List"
        android:textAppearance="@style/Baloo"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/create_batch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/orange"
        android:padding="8dp"
        android:text="Create Batch"
        android:textAppearance="@style/Baloo"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"
        app:cornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/textView21"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <TextView
        android:id="@+id/sl"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="1dp"
        android:background="@color/black"
        android:gravity="center"
        android:padding="4dp"
        android:text="SL"
        app:layout_constraintHorizontal_weight="1"
        android:textAppearance="@style/OpenSansSemiBold"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintEnd_toStartOf="@+id/name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:drawableEnd="@drawable/ascending"
        android:drawablePadding="4dp"
        android:padding="4dp"
        android:text="@string/batch_name"
        android:gravity="center"
        android:layout_marginEnd="1dp"
        android:textAppearance="@style/OpenSansSemiBold"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/batch"
        app:layout_constraintEnd_toStartOf="@+id/batch"
        app:layout_constraintStart_toEndOf="@+id/sl"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintTop_toTopOf="@+id/batch" />

    <TextView
        android:id="@+id/batch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:drawableEnd="@drawable/ascending"
        android:drawablePadding="4dp"
        android:padding="4dp"
        android:text="@string/center_name"
        android:gravity="center"
        android:layout_marginEnd="1dp"
        android:textAppearance="@style/OpenSansSemiBold"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/course"
        app:layout_constraintEnd_toStartOf="@+id/course"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toTopOf="@+id/course" />

    <TextView
        android:id="@+id/course"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="1dp"
        android:background="@color/black"
        android:drawableEnd="@drawable/ascending"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingEnd="16dp"
        android:paddingBottom="4dp"
        android:text="@string/batch_code"
        android:textAppearance="@style/OpenSansSemiBold"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/nostds"
        app:layout_constraintEnd_toStartOf="@+id/nostds"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintStart_toEndOf="@+id/batch"
        app:layout_constraintTop_toTopOf="@+id/nostds" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/back"
        app:layout_constraintBottom_toBottomOf="@+id/textView21"
        app:layout_constraintEnd_toEndOf="@+id/textView21"
        app:layout_constraintTop_toTopOf="@+id/textView21" />
    <TextView
        android:id="@+id/nostds"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@color/black"
        android:drawableEnd="@drawable/ascending"
        android:padding="4dp"
        android:text="@string/n_of_students"
        android:textAlignment="textStart"
        android:textAppearance="@style/OpenSansSemiBold"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/course"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nostds"
        app:layout_constraintStart_toStartOf="@+id/sl"
        app:layout_constraintTop_toBottomOf="@+id/name">

        <com.cooltechworks.views.shimmer.ShimmerRecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:shimmer_demo_child_count="20"
            app:shimmer_demo_layout="@layout/shimmer_assignment"
            tools:listitem="@layout/trainer_batch_item" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>